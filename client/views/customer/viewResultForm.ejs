<% layout('/layouts/boilerplate') %>

    <div class="container col-md-8 mt-5">
        <div class="col-lg-12">
            <h1 class="fw-bold text-center" style="color: hsl(218, 81%, 75%)">
                View Your Results Here
            </h1>
        </div>
        <form action="/ViewResult" method="GET" class="" id="search">
            <div class="input-group">
                <input type="text" name="caseno" id="caseno" class="form-control" placeholder="Input Reference No" />
                <button class="btn btn-warning input-group-text" id="searchbtn">Search</button>
            </div>
        </form>
    </div>

    <section>
        <div class="container mt-2 col-md-8 offset-2 ">
            <div class="card" style="display: block;">
                <div class="card-header">
                    <h5>Personal Details</h5>
                </div>
                <div class="card-body form-control">
                    <div class="row g-3">
                        <label for="" class="col-auto form-label">Name:</label>
                        <label for="" id="name" class="col-auto form-label">

                        </label>
                        <input type="text" class="col-auto" name="fname" id="fname" value="<%= customerCaseno.fname %>"
                            readonly>

                        <label for="" class="col-auto form-label">Address:</label>
                        <label for="" id="address" class="col-auto form-label"></label>
                    </div>
                    <div class="row g-3">
                        <label for="" class="col-auto form-label">Gender:</label>
                        <label for="" id="gender" class="col-auto form-label"></label>
                    </div>
                    <div class="row g-3">
                        <label for="" class="col-auto form-label">Age:</label>
                        <label for="" id="age" class="col-auto form-label"></label>
                    </div>
                    <hr>
                    <table class="table table-stripped">
                        <tr>
                            <th>Lab Reference</th>
                            <th>Department</th>
                            <th>Test Type</th>
                            <th>Normal Range</th>
                            <th>Result Range</th>
                            <th>Action</th>
                        </tr>
                        <% for(let test of testCaseno) {%>
                            <tr>
                                <td>
                                    <%= test.testref %>
                                </td>
                                <td>
                                    <%= test.name %>
                                </td>
                                <td>
                                    <%= test.testtype %>
                                </td>
                                <td>
                                    <%= test.range %>
                                </td>
                                <td>
                                    <%= test.result %>
                                </td>

                                <td>
                                    <a href="" class="btn btn-info btn-sm">Print Result</a>
                                </td>

                            </tr>
                            <% } %>
                    </table>
                </div>
                <div class="card-footer text-center text-muted">
                    Rumeraz Lab &copy; 2023
                </div>
            </div>

        </div>
    </section>
    <section>
        <div class="container col-md-4">
            <label for=""></label>
        </div>
    </section>