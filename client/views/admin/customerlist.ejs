<% layout('/layouts/adminboilerplate') %>

    <div class="container mt-5 border border-primary">
        <div class="container m-3">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Add Customer
            </button>
        </div>

        <div class="container m-3 rounded">
            <table class="table table-bordered">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact No.</th>
                    <th>Address</th>
                    <th>Gender</th>
                    <th>BirthDate</th>
                    <th>Age</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
                <% for (let customers of allCustomer) {%>
                    <tr>

                        <td>
                            <%= customers.lname %>,
                                <%= customers.fname %>
                                    <%= customers.mname %>
                        </td>
                        <td>
                            <%= customers.email %>
                        </td>
                        <td>
                            <%= customers.contact %>
                        </td>
                        <td>
                            <%= customers.address %>
                        </td>
                        <td>
                            <%= customers.gender %>
                        </td>
                        <td>
                            <%= customers.birthdate %>
                        </td>
                        <td>
                            <%= customers.age %>
                        </td>
                        <td>
                            <%= customers.username %>
                        </td>
                        <td>
                            <%= customers.password %>
                        </td>
                        <td>
                            <form action="/Allcustomer/<%= customers._id %>?_method=DELETE" method="POST">
                                <div class=" btn-group">
                                    <a href="/Allcustomer/<%= customers._id %>" class="btn btn-info">Edit</a>

                                    <button class="btn btn-danger">
                                        Delete
                                    </button>

                                </div>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </table>
        </div>
    </div>

    <!-- MODAL ADD CUSTOMER FORM  -->

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Customer Form</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/Allcustomer" method="POST" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col">
                                <label for="fname">First Name</label>
                                <input type="text" name="fname" id="fname" class="form-control" placeholder="First Name"
                                    aria-label="First name" required>
                            </div>
                            <div class="col">
                                <label for="mname">Middle Name</label>
                                <input type="text" name="mname" id="mname" class="form-control" placeholder="Mid Name"
                                    aria-label="Mid name" required>
                            </div>
                            <div class="col">
                                <label for="lname">Last Name</label>
                                <input type="text" name="lname" id="lname" class="form-control" placeholder="Last Name"
                                    aria-label="Last name" required>
                            </div>

                        </div>
                        <div class="mt-2">
                            <div class="col">
                                <label for="email">Email</label>
                                <input type="email" required class="form-control" name="email" id="email"
                                    placeholder="email@mail.com">
                            </div>
                        </div>
                        <div class="mt-2">
                            <div class="col">
                                <label for="contact">Contact Number</label>
                                <input type="number" required class="form-control" name="contact" id="connum"
                                    placeholder="639127686109">
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col">
                                <label for="address">Address</label>
                                <input type="text" name="address" id="address" class="form-control"
                                    placeholder="Address" aria-label="Address" required>
                            </div>
                        </div>

                        <label for="gender">Gender:</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male"
                                required>
                            <label class="form-check-label" for="inlineRadio1">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female"
                                required>
                            <label class="form-check-label" for="inlineRadio2">Female</label>
                        </div>


                        <div class="row">

                            <div class="col">
                                <label for="birthdate">Birth Date</label>
                                <input type="date" name="birthdate" class="form-control" required>
                            </div>
                            <div class="col">
                                <label for="age">Age</label>
                                <input type="number" name="age" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="input-group mt-2">
                                    <span class="input-group-text" id="basic-addon1">username</span>
                                    <input type="text" name="username" class="form-control" required>
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group mt-2">
                                    <span class="input-group-text" id="basic-addon1">password</span>
                                    <input type="text" name="password" class="form-control" required>
                                </div>
                            </div>

                        </div>
                </div>
                <div class="modal-footer">
                    <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button> -->
                    <button class="btn btn-primary" data-bs-dismiss=" modal">Save changes</button>
                </div>
                </form>
            </div>
        </div>
    </div>