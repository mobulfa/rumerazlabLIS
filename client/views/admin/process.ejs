<% layout('/layouts/adminboilerplate') %>


    <!-- Test INFO -->
    <div class="container mt-5">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Select Test
        </button>

    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Select Test</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/Processcustomer" method="POST">
                        <select name="test" id="test">
                            <% for (let tests of allTest) {%>

                                <option value="<%= tests.test %>">
                                    <%= tests.test %>
                                </option>

                                <% } %>
                        </select>

                        <div class="modal-footer">
                            <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button> -->
                            <button class="btn btn-primary" data-bs-dismiss=" modal">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>

    <form action="/Processcustomer" method="POST">

        <div class="container mt-4">
            <div class="col-4">
                <label for="CaseNo">CaseNo: <%= caseNo %></label>
            </div>


            <!-- Customer Info -->

            <label for="customer_name">Customer Name: </label>
            <input type="text" value=" <%= customerID.lname %>, <%= customerID.fname %>" disabled />
            <label for="Address">Address:</label>
            <input type="text" disabled value="<%= customerID.address %>" />
            <label for="Age">Age:</label>
            <input type="text" disabled value="<%= customerID.age %>" />

            <div class="row mt-2 col-8">
                <table class="table table-bordered">
                    <tr>
                        <th>Department</th>
                        <th>Test Type</th>
                        <th>Normal Range</th>
                        <th>Result</th>
                        <th>Actions</th>

                    </tr>

                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <a href="/" class="btn btn-info">Add Result</a>
                        </td>

                    </tr>

                </table>
            </div>
            <button class="btn btn-outline-success"> Save </button>
        </div>
    </form>